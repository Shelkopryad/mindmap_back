<div>
  <%= link_to 'New', new_check_item_path %>
</div>
<div>

  <%= form_tag(check_items_search_path, method: :get) do %>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag('Search') %>
  <% end %>

  <% unless @result.empty? %>
    <%= form_tag(check_items_select_to_test_path, method: :post) do %>
      <% @result.each do |item| %>
        <div>
          <%= "#{item['item_to_check'].item_to_check} : #{item['tags'].map(&:tag)}" %>
          <%= check_box_tag("to_test #{item['item_to_check'].id}".to_sym) %>
        </div>
      <% end %>
      <%= submit_tag("Select to test") %>
    <% end %>
  <% end %>


</div>